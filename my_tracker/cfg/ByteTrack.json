{
  "name": "ByteTrack",

  "source_weights_path": "./../inference_tools/models/detector_best.pt",
  "source_video_path": "./data/fa2.mp4",

  "device": "mps",
  "video_stride": 1,

  "img_size": 640,
  "conf_threshold": 0.1,
  "iou_threshold": 0.8,
  "max_det": 50,

  "track_high_thresh": 0.4,
  "track_low_thresh": 0.1,
  "new_track_thresh": 0.1,
  "track_buffer": 500,
  "match_thresh": 0.8,
  "frame_rate": 25,

  "proximity_thresh": 0.9,
  "appearance_thresh": 0.8,
  "with_reid": false,
  "reid_default": true,
  "weight_path": "ver12.pt",

  "gmc_method": null,
  "ablation": "sparseOptFlow",


  "save_dir": "./outputs/",
  "save_results": false,
  "display": true,
  "action_recognition": {

    "gathering": {
      "enabled": true,
      "distance_threshold": 1.5,
      "area_threshold": 0.5
    },

    "standing_still": {
        "enabled": true,
        "speed_threshold": 0.05
    },

    "fast_approaching": {
        "enabled": true,
        "distance_threshold": 3,
        "speed_threshold": 0.8
    }
  }
}